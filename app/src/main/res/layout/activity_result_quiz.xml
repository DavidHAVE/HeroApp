<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quiz_menu"
    tools:context="com.android.weni.pahlawan.pahlawan.ui.quiz.ResultQuizActivity">

        <RatingBar
            android:id="@+id/ratingBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:isIndicator="true"
            android:layout_above="@+id/textResult1"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:rating="0.0"/>

    <TextView
        android:id="@+id/textResult1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@+id/textResult2"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textSize="22sp"
        android:text="Skor Anda" />

        <TextView
            android:id="@+id/textResult2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="0"
            android:textSize="24sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textResult2"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/repeat_quiz_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_dark"
            android:text="Ulangi"/>
        <Button
            android:id="@+id/close_quiz_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_dark"
            android:text="Tutup"/>
    </LinearLayout>
    </RelativeLayout>

