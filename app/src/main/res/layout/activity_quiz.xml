<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quiz_menu"
    tools:context="com.android.weni.pahlawan.pahlawan.ui.quiz.QuizActivity">

    <Button
        android:id="@+id/readyQuizButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_dark"
        android:text="Mulai" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/quiz_rule_card_view"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:text="Peraturan"
        android:textSize="24sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/quiz_rule_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/readyQuizButton"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        card_view:cardBackgroundColor="@color/cardViewColor"
        card_view:cardCornerRadius="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="5dp"
            android:text="@string/quiz_rule"
            android:textSize="16sp" />

    </android.support.v7.widget.CardView>

</RelativeLayout>
